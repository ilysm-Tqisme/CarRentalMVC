@using System.IdentityModel.Tokens.Jwt
@inject IHttpContextAccessor HttpContextAccessor

@{
    var token = HttpContextAccessor.HttpContext?.Session.GetString("Token");
    string? userName = null;
    string avatarPath = "/images/avatar.jpg"; // ảnh mặc định

    if (!string.IsNullOrEmpty(token))
    {
        try
        {
            var handler = new JwtSecurityTokenHandler();
            var jwt = handler.ReadJwtToken(token);
            userName = jwt.Claims.FirstOrDefault(c => c.Type.EndsWith("/name"))?.Value ?? "Người dùng";

            var avatarSession = HttpContextAccessor.HttpContext.Session.GetString("Avatar");
            if (!string.IsNullOrEmpty(avatarSession))
                avatarPath = avatarSession;
        }
        catch { }
    }
}
@functions {
    private string GetFullImageUrl(string? path)
    {
        if (string.IsNullOrEmpty(path))
            return "/images/avatar.jpg"; // ảnh mặc định

        // Nếu đã có http (link đầy đủ rồi) thì trả nguyên
        if (path.StartsWith("http"))
            return path;

        // Nếu là đường dẫn tương đối (như /uploads/...) → nối với API
        return $"http://localhost:5000{path}";
    }
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRental</title>

    <!-- Bootstrap 5 CSS -->
