<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRental Admin</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <h4><i class="bi bi-car-front-fill me-2"></i>CarRental Admin</h4>
                <button class="btn btn-link d-lg-none" id="sidebarToggle">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>

            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">
                            <i class="bi bi-speedometer2"></i>
                            <span>Trang chủ</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="UserManagement" asp-action="Index">
                            <i class="bi bi-people-fill"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Branches" asp-action="Index">
                            <i class="bi bi-car-front"></i>
                            <span>Quản lý chi nhánh</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="VehicleBrand" asp-action="Index">
                            <i class="bi bi-calendar-check"></i>
                            <span>Quản lý hãng xe</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="VehicleType" asp-action="Index">
                            <i class="bi bi-people"></i>
                            <span>Quản lý loại xe</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Vehicles" asp-action="Index">
                            <i class="bi bi-credit-card"></i>
                            <span>Quản lý xe</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rentals" asp-action="AdminList">
                            <i class="bi-card-list"></i>
                            <span>Quản lý đơn thuê xe</span>
                        </a>
                    </li>
                    <li class="nav-item mt-4">
                        <a class="nav-link" asp-controller="Reports" asp-action="Index">
                            <i class="bi bi-graph-up"></i>
                            <span>Báo cáo</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Settings" asp-action="Index">
                            <i class="bi bi-gear"></i>
                            <span>Cài đặt</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Top Header -->
            <header class="top-header">
                <div class="header-left">
                    <button class="btn btn-link d-lg-none" id="sidebarToggleBtn">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <h5 class="mb-0 d-none d-md-block">@ViewData["Title"]</h5>
                </div>

                <div class="header-right">
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle user-dropdown" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-4 me-2"></i>
                            <span class="d-none d-md-inline">Admin</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="bi bi-person me-2"></i>Hồ sơ cá nhân
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Main Content -->
            <main class="content-area">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="admin-footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <h6 class="fw-bold">CarRental Co., Ltd</h6>
                            <p class="mb-1"><i class="bi bi-geo-alt me-2"></i>123 Nguyễn Huệ, Q.1, TP. HCM</p>
                            <p class="mb-1"><i class="bi bi-envelope me-2"></i>support@carrental.vn</p>
                            <p class="mb-0"><i class="bi bi-telephone me-2"></i>0123 456 789</p>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <h6 class="fw-bold">Liên kết nhanh</h6>
                            <ul class="list-unstyled">
                                <li><a asp-controller="Admin" asp-action="Index" class="footer-link">Trang chủ</a></li>
                                <li><a asp-controller="Home" asp-action="Policy" class="footer-link">Chính sách</a></li>
                                <li><a asp-controller="Home" asp-action="Contact" class="footer-link">Liên hệ</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <p class="mb-0">&copy; @DateTime.Now.Year CarRental. All rights reserved.</p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Admin JS -->
    <script src="~/js/adminJS.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
