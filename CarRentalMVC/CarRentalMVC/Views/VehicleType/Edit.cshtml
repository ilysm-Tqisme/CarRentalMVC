@model CarRentalMVC.Models.VehicleTypeViewModel

@{
    ViewData["Title"] = "Chỉnh sửa loại xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TypeID" />

    <div class="mb-3">
        <label asp-for="TypeName" class="form-label"></label>
        <input asp-for="TypeName" class="form-control" placeholder="Nhập tên loại xe..." />
        <span asp-validation-for="TypeName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Nhập mô tả..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
