@model CarRentalMVC.Models.UserManagementViewModel.UserManagementIndexViewModel

@{
    ViewData["Title"] = "Quản Lý Người Dùng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-people-fill me-2"></i>Quản Lý Người Dùng
                    </h4>
                </div>
                <div class="card-body">
                    @* Hiển thị thông báo *@
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>@Model.Message
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Error))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@Model.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* Bảng danh sách người dùng *@
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Họ Tên</th>
                                    <th>Email</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Địa Chỉ</th>
                                    <th>Vai Trò</th>
                                    <th>Trạng Thái</th>
                                    <th>Ngày Tạo</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Users != null && Model.Users.Any())
                                {
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.UserID</td>
                                            <td>@user.FullName</td>
                                            <td>@user.Email</td>
                                            <td>@(user.Phone ?? "N/A")</td>
                                            <td>@(user.Address ?? "N/A")</td>
                                            <td>
                                                @if (user.Role == "Admin")
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-shield-fill me-1"></i>Admin
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="bi bi-person-fill me-1"></i>User
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @* Sử dụng TagHelper để hiển thị trạng thái *@
                                                <user-status is-locked="@user.IsLocked"></user-status>
                                                
                                                @* Hoặc sử dụng ViewComponent *@
                                                @* @await Component.InvokeAsync("UserStatus", new { isLocked = user.IsLocked }) *@
                                            </td>
                                            <td>@user.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @* Nút khóa/mở khóa tài khoản *@
                                                @if (user.IsLocked)
                                                {
                                                    <form asp-action="Unlock" asp-route-id="@user.UserID" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-success" 
                                                                onclick="return confirm('Bạn có chắc chắn muốn mở khóa tài khoản này?');">
                                                            <i class="bi bi-unlock-fill me-1"></i>Mở Khóa
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <form asp-action="Lock" asp-route-id="@user.UserID" method="post" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                                onclick="return confirm('Bạn có chắc chắn muốn khóa tài khoản này?');">
                                                            <i class="bi bi-lock-fill me-1"></i>Khóa
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox me-2"></i>Không có dữ liệu
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tự động ẩn thông báo sau 5 giây
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}

