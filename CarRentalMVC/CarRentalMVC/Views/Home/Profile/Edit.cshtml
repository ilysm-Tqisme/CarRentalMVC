@model CarRentalMVC.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">Chỉnh sửa hồ sơ</h4>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@Model.ProfileImage" alt="Avatar" class="rounded-circle mb-3" width="150" height="150" />
                    <input type="file" name="ProfileImage" class="form-control" />
                </div>

                <div class="col-md-8">
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>CMND/CCCD</label>
                        <input type="file" name="IDCardImage" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label>Bằng lái xe</label>
                        <input type="file" name="DriverLicenseImage" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a href="@Url.Action("Index", "Profile")" class="btn btn-secondary">Hủy</a>
                </div>
            </div>
        </form>
    </div>
</div>
