@model CarRentalMVC.Models.VehicleViewModel
@{
    ViewData["Title"] = "Chỉnh sửa xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="VehicleID" />

    <div class="mb-3">
        <label asp-for="VehicleName"></label>
        <input asp-for="VehicleName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Hãng xe</label>
        <select asp-for="BrandID" class="form-select" asp-items="@(new SelectList(Model.Brands, "BrandID", "BrandName"))"></select>
    </div>

    <div class="mb-3">
        <label>Loại xe</label>
        <select asp-for="TypeID" class="form-select" asp-items="@(new SelectList(Model.Types, "TypeID", "TypeName"))"></select>
    </div>

    <div class="mb-3">
        <label>Chi nhánh</label>
        <select asp-for="BranchID" class="form-select" asp-items="@(new SelectList(Model.Branches, "BranchID", "BranchName"))"></select>
    </div>

    <div class="mb-3">
        <label asp-for="PricePerDay"></label>
        <input asp-for="PricePerDay" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Seats"></label>
        <input asp-for="Seats" class="form-control" />
    </div>

    @if (!string.IsNullOrEmpty(Model.VehicleImage))
    {
        <div class="mb-3">
            <label>Ảnh hiện tại:</label><br />
            <img src="@($"http://localhost:5000{Model.VehicleImage}")"
                 style="width:150px;height:100px;object-fit:cover;border-radius:8px;" />
        </div>
    }



    <div class="mb-3">
        <label>Chọn ảnh mới</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
