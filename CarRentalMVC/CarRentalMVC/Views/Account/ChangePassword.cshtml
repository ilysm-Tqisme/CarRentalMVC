@model CarRentalMVC.Models.ChangePasswordViewModel

<h2>Đổi mật khẩu</h2>
<form asp-action="ChangePassword" method="post">
    <div class="mb-3">
        <label>Mật khẩu cũ</label>
        <input asp-for="OldPassword" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Mật khẩu mới</label>
        <input asp-for="NewPassword" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Nhập lại mật khẩu mới</label>
        <input asp-for="ConfirmNewPassword" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Message"]</div>
}
