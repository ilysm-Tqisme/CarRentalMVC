@model CarRentalMVC.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-container">
    <div class="auth-background">
        <div class="auth-shape shape-1"></div>
        <div class="auth-shape shape-2"></div>
        <div class="auth-shape shape-3"></div>
    </div>

    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-lg-10">
                <div class="auth-card">
                    <div class="row g-0">
                        <!-- Left Side - Image/Illustration -->
                        <div class="col-lg-6 auth-image-side">
                            <div class="auth-image-content">
                                <div class="auth-logo-section">
                                    <i class="bi bi-car-front-fill auth-logo-icon"></i>
                                    <h2 class="auth-brand">CarRental</h2>
                                </div>
                                <h3 class="auth-welcome-title">Chào Mừng Trở Lại!</h3>
                                <p class="auth-welcome-text">Đăng nhập để tiếp tục trải nghiệm dịch vụ thuê xe tốt nhất</p>
                                <div class="auth-features">
                                    <div class="auth-feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Đặt xe nhanh chóng</span>
                                    </div>
                                    <div class="auth-feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Giá cả hợp lý</span>
                                    </div>
                                    <div class="auth-feature-item">
                                        <i class="bi bi-check-circle-fill"></i>
                                        <span>Hỗ trợ 24/7</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Side - Login Form -->
                        <div class="col-lg-6 auth-form-side">
                            <div class="auth-form-content">
                                <div class="auth-form-header">
                                    <h2 class="auth-form-title">Đăng Nhập</h2>
                                    <p class="auth-form-subtitle">Nhập thông tin để đăng nhập vào tài khoản</p>
                                </div>

                                <form asp-action="Login" method="post" class="auth-form">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger auth-alert"></div>

                                    <div class="form-floating-group">
                                        <div class="input-group-custom">
                                            <span class="input-icon">
                                                <i class="bi bi-envelope"></i>
                                            </span>
                                            <input asp-for="Email"
                                                   type="email"
                                                   class="form-control-custom"
                                                   placeholder="Email"
                                                   required />
                                            <label class="floating-label">Email</label>
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger validation-message"></span>
                                    </div>

                                    <div class="form-floating-group">
                                        <div class="input-group-custom">
                                            <span class="input-icon">
                                                <i class="bi bi-lock"></i>
                                            </span>
                                            <input asp-for="Password"
                                                   type="password"
                                                   class="form-control-custom password-input"
                                                   placeholder="Mật khẩu"
                                                   required />
                                            <label class="floating-label">Mật khẩu</label>
                                            <button type="button" class="password-toggle" onclick="togglePassword(this)">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger validation-message"></span>
                                    </div>

                                    <div class="form-options">
                                        <div class="form-check-custom">
                                            <input type="checkbox" class="form-check-input-custom" id="rememberMe">
                                            <label class="form-check-label-custom" for="rememberMe">
                                                Ghi nhớ đăng nhập
                                            </label>
                                        </div>
                                        <a href="#" class="forgot-password-link">Quên mật khẩu?</a>
                                    </div>

                                    <button type="submit" class="btn-auth btn-auth-primary">
                                        <span class="btn-text">Đăng Nhập</span>
                                        <span class="btn-icon">
                                            <i class="bi bi-arrow-right"></i>
                                        </span>
                                    </button>

                                    <div class="auth-divider">
                                        <span>hoặc</span>
                                    </div>

                                    <div class="social-login">
                                        <button type="button" class="btn-social btn-google">
                                            <i class="bi bi-google"></i>
                                            <span>Google</span>
                                        </button>
                                        <button type="button" class="btn-social btn-facebook">
                                            <i class="bi bi-facebook"></i>
                                            <span>Facebook</span>
                                        </button>
                                    </div>

                                    <div class="auth-footer">
                                        <p>Chưa có tài khoản? <a asp-action="Register" class="auth-link">Đăng ký ngay</a></p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/auth.css" />
    <script src="~/js/auth.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
