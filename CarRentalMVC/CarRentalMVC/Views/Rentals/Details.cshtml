@model CarRentalMVC.Models.RentalViewModel
@{
    ViewData["Title"] = "Chi tiết đơn thuê";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <img src="@($"{ViewBag.ApiBase}{Model.VehicleImage}")"
                     alt="@Model.VehicleName"
                     class="card-img-top"
                     style="height: 300px; object-fit: cover;"
                     onerror="this.src='/images/no-image.png'" />

                <div class="card-body">
                    <h4>@Model.VehicleName</h4>
                    <p class="text-muted">
                        <strong>Hãng:</strong> @Model.BrandName<br />
                        <strong>Loại:</strong> @Model.TypeName<br />
                        <strong>Số ghế:</strong> @Model.Seats<br />
                        <strong>Giá:</strong> @Model.DailyRate.ToString("N0") VNĐ/ngày
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title">Chi tiết đơn thuê #@Model.RentalID</h4>

                    <div class="mb-3">
                        <strong>Trạng thái:</strong>
                        @if (Model.Status == "Pending")
                        {
                            <span class="badge bg-warning">Chờ duyệt</span>
                        }
                        else if (Model.Status == "Approved")
                        {
                            <span class="badge bg-success">Đã duyệt</span>
                        }
                        else if (Model.Status == "Active")
                        {
                            <span class="badge bg-info">Đang thuê</span>
                        }
                        else if (Model.Status == "Completed")
                        {
                            <span class="badge bg-secondary">Hoàn thành</span>
                        }
                        else if (Model.Status == "Cancelled")
                        {
                            <span class="badge bg-danger">Đã hủy</span>
                        }
                        else if (Model.Status == "Rejected")
                        {
                            <span class="badge bg-dark">Bị từ chối</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.RejectionReason))
                    {
                        <div class="alert alert-danger">
                            <strong>Lý do từ chối:</strong> @Model.RejectionReason
                        </div>
                    }

                    <p class="mb-2">
                        <strong>Ngày nhận xe:</strong> @Model.RentalDate.ToString("dd/MM/yyyy HH:mm")
                    </p>
                    <p class="mb-2">
                        <strong>Ngày trả xe:</strong> @Model.ReturnDate.ToString("dd/MM/yyyy HH:mm")
                    </p>
                    <p class="mb-2">
                        <strong>Chi nhánh:</strong> @Model.BranchName
                    </p>
                    <p class="mb-2">
                        <strong>Tạo lúc:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                    </p>

                    <hr />

                    <h5 class="text-primary">
                        Tổng tiền: @Model.TotalPrice.ToString("N0") VNĐ
                    </h5>

                    <div class="d-grid gap-2 mt-4">
                        @if (Model.Status == "Pending")
                        {
                            <form method="post" action="@Url.Action("Cancel", new { id = Model.RentalID })"
                                  onsubmit="return confirm('Bạn có chắc muốn hủy đơn này?');">
                                <button type="submit" class="btn btn-danger">Hủy đơn</button>
                            </form>
                        }
                        <a href="@Url.Action("MyRentals")" class="btn btn-secondary">Quay lại</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>