@{
    ViewData["Title"] = "Thống kê doanh thu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
    <h2 class="mb-4">Thống kê doanh thu</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Tổng đơn</h5>
                    <h3>@Model?.TotalRentals ?? 0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Chờ duyệt</h5>
                    <h3>@Model?.PendingRentals ?? 0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Đã duyệt</h5>
                    <h3>@Model?.ApprovedRentals ?? 0</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Doanh thu</h5>
                    <h3>@Model?.TotalRevenue.ToString("N0") VNĐ</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Rentals -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Đơn thuê gần đây</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Xe</th>
                        <th>Ngày thuê</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model?.RecentRentals?.Count > 0)
                    {
                        @foreach (var rental in Model.RecentRentals)
                        {
                            <tr>
                                <td>@rental.UserName</td>
                                <td>@rental.VehicleName</td>
                                <td>@rental.RentalDate.ToString("dd/MM/yyyy")</td>
                                <td class="fw-bold">@rental.TotalPrice.ToString("N0") VNĐ</td>
                                <td>
                                    <span class="badge bg-@(rental.Status == "Completed" ? "success" : "warning")">
                                        @rental.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("AdminList")" class="btn btn-secondary">← Quay lại</a>
    </div>
</div>
